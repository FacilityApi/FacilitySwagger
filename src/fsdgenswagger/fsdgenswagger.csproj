<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFrameworks>netcoreapp2.1;netcoreapp3.1</TargetFrameworks>
    <Description>A .NET Tool that converts Swagger (OpenAPI) 2.0 to/from a Facility Service Definition.</Description>
    <PackageTags>Facility FSD Swagger OpenAPI CodeGen</PackageTags>
    <PackAsTool>True</PackAsTool>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Facility.CodeGen.Console" Version="2.3.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Facility.Definition.Swagger\Facility.Definition.Swagger.csproj" />
  </ItemGroup>

</Project>
